@model List<IrisChat.Models.ForumThreadCardViewModel>

<div class="container">
    <h2>Forum Threads</h2>
    <div class="row">
        @foreach (var thread in Model) {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@thread.ShortTitle</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@thread.ShortCategoryName</h6>
                        <p class="card-text">@thread.ShortContent</p>
                        <p class="card-text"><small class="text-muted">Created on @thread.CreatedAt.ToString("g")</small></p>
                        <a href="@Url.Action("Details", "ForumThread", new { id = thread.Id })" class="btn btn-primary">View Thread</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
